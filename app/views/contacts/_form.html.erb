<div class="container">
  <%= form_for(@contact) do |f| %>
    <ul>
    <% @contact.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <div class="container-fluid">
      <!-- <div class="form-group col-md-6" style="float: left"> -->
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :first_name , class: "col-sm-2 col-form-label col-md-6" %><br />
          <%= f.text_field :first_name , :class => "form-control" , :placeholder => "First Name" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :last_name , class: "col-sm-2 col-form-label col-md-6" %><br />
          <%= f.text_field :last_name , :class => "form-control" , :placeholder => "Last Name" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :number , class: "col-sm-2 col-form-label col-md-6" %><br />
          <%= f.text_field :number , :class => "form-control" , :placeholder => "Contact Number" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :email_id , class: "col-sm-2 col-form-label"%><br />
          <%= f.text_area :email_id , :class => "form-control" , placeholder: "Email Address" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>